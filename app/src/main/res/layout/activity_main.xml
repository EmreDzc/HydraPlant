<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1: Tohum"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    <TextView
            android:id="@+id/tvHpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can (HP)"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvLevel"
            app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
            android:id="@+id/pbHealth"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100"
            android:progressTint="#FF0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHpLabel"/>

    <TextView
            android:id="@+id/tvXpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tecrübe (XP)"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/pbHealth"
            app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
            android:id="@+id/pbExp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="20"
            android:progressTint="#4CAF50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvXpLabel"/>

    <ImageView
            android:id="@+id/ivPlant"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintTop_toBottomOf="@id/pbExp"
            app:layout_constraintBottom_toTopOf="@id/btnDrinkWater"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/btnDrinkWater"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="SU İÇ (250ml)"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>